        function calcola() {
            vett= new Array();
            let n,Somma=0;
            do{
                do {
                    n= Number(prompt("Inserisci un numero","inserisci"));
                    if(isNaN(n))
                        alert("Non hai inserito il numero")
                    else
                        Somma+=n;
                }while(isNaN(n))

                    
                
            }while(n!=0)
        }
